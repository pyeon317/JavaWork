package quiz01; //현제 클래스는 백준 사이트의 문제를 풀기 위한 스크립트로 노션에 푼 문제들을 저장함

import java.io.*;
import java.util.*;

public class Main{

    public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int N = scan.nextInt();
		int cnt = 0;//주머니 수
		
		if(N == 1 || N == 2 || N == 4 || N == 7) {
			cnt = -1;
		}else{
			switch (N % 10) {
			case 1: case 6:
				cnt = (N - 6) / 5 + 2;//+2는 6을 3으로 나눈 값
				break;
			case 2: case 7:
				cnt = (N - 12) / 5 + 4;//  + 12/3
				break;
			case 3: case 8:
				cnt = (N - 3) / 5 + 1;// + 3/3
				break;
			case 4: case 9:
				cnt = (N - 9) / 5 + 3; // +9/3
				break;

			default:
				cnt = N/5;
				break;
			}
		}
		System.out.println(cnt);
		scan.close();
	}
}