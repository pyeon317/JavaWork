package day16.api.io.buffered;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileReader;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.Reader;

public class BufferReaderUTF8 {

	public static void main(String[] args) {
		
		/*
		 * 인코딩 = 파일or텍스트문서가 저장될 때 => 컴퓨터가 아는 이진수 형태로 저장하는 형식
		 * 디코딩 = 컴퓨터가 아는 이진수 형태 => 인간이 알고 있는 문자형식으로 변경
		 */
		String path = "C:\\Users\\user\\Desktop\\file\\example1.txt";
		
		InputStream fis = new FileInputStream(path); //1바이트 기반
		
		Reader rd = new InputStreamReader(fis); //1바이트기반 -> 2바이트형식 변경
		
		BufferedReader br = new BufferedReader( rd ); //2바이트 기반 빠른 읽기
		
		try (BufferedReader br = new BufferedReader(new FileReader(path))){
			
			String str;
			while( (str = br.readLine()) != null) {
				System.out.println(str);
			}
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
	}
}
